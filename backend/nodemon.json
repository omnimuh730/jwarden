{
	"watch": ["src"],
	"ext": "ts,js,json",
	"ignore": ["src/**/*.test.ts", "src/**/*.spec.ts", "node_modules", "dist"],
	"exec": "tsx src/index.ts",
	"env": {
		"NODE_ENV": "development"
	},
	"colours": true,
	"legacyWatch": false,
	"pollingInterval": 100,
	"runOnChangeOnly": false,
	"verbose": true,
	"delay": 1000
}
